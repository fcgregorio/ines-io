include _includes/_mixins

doctype xml
rss(version="2.0", xmlns:atom="http://www.w3.org/2005/Atom")
  channel  
    title= title
    link= url
    description= description
    atom:link(href="#{ url }/feed.xml", rel="self", type="application/rss+xml")
    for post, slug in public.blog._data
        if post.published != false
          item
            title=(post.subheadline) ? post.headline + ' â€” ' + post.subheadline : post.headline
            description <![CDATA[ 
              if post.image
                p: img(src=url + "/blog/img/" + post.image.file)
              
              !=partial("blog/" + slug, { absolute: url + "/blog/" })
              | ]]>

            if post.date
              pubDate=convertPubDate(post.date)

            link #{ url }/blog/#{ slug }
            guid(isPermaLink="true") #{ url }/blog/#{ slug }